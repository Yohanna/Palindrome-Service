{
  "name": "palindrome-service",
  "version": "1.0.0",
  "description": "CRUD service for palindrome messages",
  "license": "ISC",
  "author": "Yohanna",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha test/**/*.js --exit",
    "test:watch": "mocha --watch ./test/**/*.js --exit",
    "coverage": "NODE_ENV=test c8 mocha test/**/*.js --exit",
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "http:health": "http :3000/health",
    "http:messages": "http :3000/messages",
    "http:messages:palindromes": "http :3000/messages isPalindrome==true",
    "http:messages:non-palindromes": "http :3000/messages isPalindrome==false",
    "http:create:palindrome": "http POST :3000/messages content=racecar",
    "http:create:non-palindrome": "http POST :3000/messages content='hello world'",
    "http:get:1": "http :3000/messages/1",
    "http:update:1": "http PUT :3000/messages/1 content=level",
    "http:delete:1": "http DELETE :3000/messages/1"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^5.2.1",
    "mocha": "^11.7.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "c8": {
    "exclude": [
      "test/**/*",
      "coverage/**/*"
    ],
    "reporter": [
      "text",
      "html"
    ]
  }
}
